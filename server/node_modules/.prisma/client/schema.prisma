generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  type      String
  payload   Json
}

model Touch {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  company   String
  contact   String?
  userEmail String?
  channel   String
  subject   String?
}

model Report {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  project   String
  manpower  Int
  safety    Boolean
}

model ScheduleHealth {
  id       String   @id @default(cuid())
  date     DateTime
  project  String
  planned  Float
  actual   Float
  variance Float
  spi      Float
}
